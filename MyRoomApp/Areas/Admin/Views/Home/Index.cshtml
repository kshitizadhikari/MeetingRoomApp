@model IEnumerable<Room>
@{
    ViewData["Title"] = "Admin Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h1>Admin Index Page</h1>
</div>

<div>
    <button>
        <a asp-area="Admin" asp-controller="Home" asp-action="CreateRoom">Create Room</a>
    </button>
</div>
<div>
    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Room Name</th>
                <th>Size</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td>@room.Id</td>
                    <td>@room.Name</td>
                    <td>@room.Size</td>
                    <td>@room.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }


