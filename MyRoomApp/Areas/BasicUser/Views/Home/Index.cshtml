@using RoomApp.Utility.ViewModels;
@model IEnumerable<RoomBookingVM>
@{
    ViewData["Title"] = "User Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h1>User IndexPage</h1>
</div>

<div>
    <button><a asp-area="BasicUser" asp-controller="Home" asp-action="ViewRooms">ViewRooms</a></button>
</div>

<div class="mybooking">
    <div>
        <h2>My Bookings</h2>
    </div>
    <div>
        <table class="table table-dark table-striped table-hover">
            <thead>
                <tr>
                    <th>BookingId</th>
                    <th>BookingName</th>
                    <th>RoomName</th>
                    <th>StartTime</th>
                    <th>EndTime</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    @if (@item.UserId == ViewBag.UserId)
                    {
                        <tr>
                            <td>@item.BookingId</td>
                            <td>@item.BookingName</td>
                            <td>@item.Room?.Name</td>
                            <td>@item.StartTime</td>
                            <td>@item.EndTime</td>
                            <td>
                                <a asp-area="BasicUser" asp-controller="Home" asp-action="EditBooking" asp-route-id="@item.BookingId">Edit</a>
                                <a asp-area="BasicUser" asp-controller="Home" asp-action="DeleteBooking" asp-route-id="@item.BookingId">Remove</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>