@using RoomApp.Utility.ViewModels;
@model RoomBookingVM

@{
    ViewData["Title"] = "User Book Room";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["success"] != null)
{
    <div>
        <h2>@TempData["success"]</h2>
    </div>
}
<div>
    <h1>Basic User Index Page</h1>
</div>

<div>
    <h2>Room Details</h2>
    <div class="card" style="width: 18rem;">
        <form asp-area="BasicUser" asp-controller="Home" asp-action="BookRoom" method="post">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Room ID: @Model.Room.Id<input type="hidden" asp-for="@Model.Room.Id" value="@Model.Room?.Id" /></li>
                <li class="list-group-item">Room Name: @Model.Room?.Name<input type="hidden" asp-for="@Model.Room.Name" value="@Model.Room?.Name" /></li>
                <li class="list-group-item">Room Size: @Model.Room?.Size<input type="hidden" asp-for="@Model.Room.Size" value="@Model.Room?.Size" /></li>
                <li class="list-group-item">Room Status: @Model.Room?.Status<input type="hidden" asp-for="@Model.Room.Status" value="@Model.Room?.Status" /></li>
                <li class="list-group-item">Booking Id: <input type="hidden" asp-for="@Model.BookingId" value="@Model.BookingId" /></li>

                <li class="list-group-item">Booking Name: <input type="text" asp-for="@Model.BookingName" /></li>
                <li class="list-group-item">Start Time: <input type="datetime-local" asp-for="@Model.StartTime" /> </li>
                <li class="list-group-item">End Time: <input type="datetime-local" asp-for="@Model.EndTime" /> </li>
            </ul>
            <div>
                <button type="submit">Book Room</button>
            </div>
        </form>

    </div>
</div>