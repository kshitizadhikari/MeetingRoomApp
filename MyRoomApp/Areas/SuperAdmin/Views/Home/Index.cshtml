@using RoomApp.Utility.ViewModels;
@model IEnumerable<UserRoleVM>

@{
    ViewData["Title"] = "Super Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Hello Super Admin </h1>

<div>
    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>UserId</th>
                <th>UserName</th>
                <th>Email</th>
                <th>Role</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <a asp-area="superadmin" asp-controller="Home" asp-action="EditUser" asp-route-id="@user.UserId">Edit</a> |
                        <a asp-area="superadmin" asp-controller="Home" asp-action="DeleteUser" asp-route-id="@user.UserId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

